<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:clickable="true"
    tools:context=".model.MovieItemFragment">

    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/black"
        android:gravity="center"
        android:text="@string/film_name"
        android:textColor="@color/text_yellow_color"
        android:textSize="@dimen/text_titul_size"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/movie_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hight_of_item"
        android:scaleType="fitXY"
        tools:src="@drawable/cine">
    </ImageButton>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="8"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2015"
            android:textColor="@color/text_yellow_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Русский"
            android:textColor="@color/text_yellow_color"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="Описание фильма, которое мы не внесем в ресурс, потому что это образец"
        android:textColor="@color/text_yellow_color"
        android:textStyle="italic" />

</LinearLayout>